a=int(input("Enter Number:"))
b=int(input("Enter Number:"))
operation=input("add/sub/multi/div:")
if(operation=="add"):                                                
    print(a+b)
elif(operation=="sub"):
    print(a-b)                                                     NOTE:  if condition first and after that elif is contain more than one and after it the else is in last statement.
elif(operation=="multi"):
    print(a*b)
elif(operation=="div"):
    print(a/b)
else:
    print("Invalid operator")                    

